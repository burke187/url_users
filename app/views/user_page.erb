<div class="container">
  
  <p>Hello, <%=@current_user.name%></p>

  <form action='/urls?user_id=<%=@current_user.id%>' method='post'>
    <input type='text' name='link' placeholder='e.g. http://www.google.com'>
    <input type='submit' value='Shoten!'>
  </form>
  <br>
  <br>
  <% Url.where('user_id=?', @current_user.id).each do |url| %>
    <br>
   <a href= "/<%=url.short_link%>" > <%= url.short_link %> </a> <%= url.link %> <%=url.count%>
  <%end%>
  <br>
  <br>
  
</div>
